<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlos.rubric.AsignaturasActivity"
    tools:showIn="@layout/activity_asignaturas">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_asignaturas_recycler"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_asignaturas_button_addEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Click"
            android:tag="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Agregar Estudiante" />

        <Button
            android:id="@+id/activity_asignaturas_button_addExamen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Click"
            android:tag="2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Agregar Examen" />
    </LinearLayout>

</LinearLayout>
